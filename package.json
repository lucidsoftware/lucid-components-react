{
  "name": "lucid-components-react",
  "version": "0.9.0",
  "private": true,
  "main": "dist/lib/index.js",
  "module": "dist/lib/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lbucio/lucid-components-react"
  },
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-system": "^5.1.4",
    "react-accessible-accordion": "^3.0.1",
    "@emotion/core": "^10.0.27",
    "@emotion/styled": "^10.0.27",
    "emotion-theming": "^10.0.27",
    "react-app-polyfill": "^1.0.5",
    "react-player": "^1.14.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build-components": "rm -rf dist && tsc -p src/lib/",
    "lint": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run build-components; git add ./dist; git commit -m \"[husky auto] Build component library.\"",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint",
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "IE 11"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/styled-system": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "babel-plugin-emotion": "^10.0.27",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-emotion": "^10.0.27",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "react-scripts": "3.3.1",
    "ts-loader": "^6.2.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-loader": "^3.5.4",
    "tslint-plugin-prettier": "^2.1.0",
    "tslint-react": "^4.2.0",
    "tslint-react-a11y": "^1.1.0",
    "typescript": "^3.7.5",
    "webpack-cli": "^3.3.10"
  },
  "peerDependencies": {
    "emotion-theming": "~10.0.27"
  }
}
